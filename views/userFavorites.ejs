<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Meta tags for character set and responsive design -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Favorite Cars</title>

  <!-- CSS styles for the page -->
  <style>
    /* General body styling */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #121212; 
      color: #ffffff;
      margin: 0;
      padding: 0;
    }

    /* Header styling */
    header {
      background-color: #cc0000; 
      padding: 20px;
      text-align: center;
    }

    header h1 {
      color: white; 
      font-size: 36px;
      margin: 0;
    }

    /* Style for the favorites box */
    .favorites-container {
      width: 90%;
      max-width: 1200px;
      margin: 30px auto;
      background-color: #1e1e1e; 
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
    }

    .favorites-container h1 {
      text-align: center;
      color: #e60000;
      font-size: 32px;
      margin-bottom: 20px;
    }

    .favorites-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .favorite-item {
      background-color: #292929; 
      border-radius: 8px;
      padding: 15px;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .favorite-item:hover {
      transform: translateY(-5px);
      box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.8);
    }

    /* Images of each user favorite */
    .favorite-item img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 15px;
      border: 2px solid #e60000;
    }

    .favorite-item h2 {
      color: #e60000;
      font-size: 20px;
      margin: 10px 0;
    }

    .favorite-item button {
      background-color: #e60000;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .favorite-item button:hover {
      background-color: #cc0000;
    }

    /* No Favorites Text */
    .no-favorites {
      text-align: center;
      font-size: 18px;
      color: #ffffff;
      margin-top: 20px;
    }

    /* Footer Styles */
    footer {
      background-color: #1a1a1a;
      color: #777;
      text-align: center;
      padding: 15px;
      font-size: 14px;
    }

    footer p {
      margin: 0;
    }

    footer a {
      color: #ff0000;
      text-decoration: none;
    }

    footer a:hover {
      text-decoration: underline;
    }

  </style>
</head>
<body>
    <header>
      <!-- Header Title Page -->
      <h1>Manage Your Favorite Cars In Our Showcase</h1>
    </header>

    <div class="favorites-container">
        <h1>Your Favorite Cars</h1>
        <!-- List to display favorite cars -->
        <ul class="favorites-list">
            <% if (favoriteCars && favoriteCars.length > 0) { %>
              <!-- Loop through each favorite car -->
                <% favoriteCars.forEach(function(car) { %>
                    <li class="favorite-item" id="favorite-<%= car.car_id %>">
                      <img src="<%= car.imagePath %>" alt="<%= car.model %> Image">
                      <!-- Display car brand and model -->
                      <h2><%= car.brand %> <%= car.model %></h2>
                      <!-- Form to remove a car from favorites -->
                      <form action="/favorites/<%= car.favorites_id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Remove from Favorites</button>
                    </form>
                    </li>
                <% }) %>
            <% } else { %>
                <!-- Display message when no favorite cars are added -->
                <p class="no-favorites">You have no favorite cars yet.</p>
            <% } %>
        </ul>
    </div>

    <!-- Footer Section with Back To Home Return Route -->
    <footer>
      <p>&copy; 2024 HyperCar Showcase. All Rights Reserved <a href="home">Back to Homepage</a></p>
    </footer>
</body>
</html>
