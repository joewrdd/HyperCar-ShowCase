<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="UTF-8"> <!-- Character encoding set to UTF-8 for universal character support -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 

    <!-- Page Title -->
    <title>Car Comparison</title>

    <style>
        /* Global body styling */
        body {
            font-family: Arial, sans-serif; 
            background-color: #1a1a1a; 
            color: #fff; 
            margin: 0; 
            padding: 0; 
        }

        /* Header styling */
        header {
            background-color: #cc0000; 
            color: #fff; 
            padding: 0.5rem; 
            text-align: center; 
        }

        header img {
            height: 100px; 
            width: auto; 
            position: absolute;
            top: 63%; 
            transform: translateY(-50%); 
            left: 20px; 
        }

        /* Logo icon image */
        .logo-image {
            height: 100px;
            width: auto;
            position: absolute;
            top: 5%; 
            left: 20px; 
        }

        /* Home icon styles */
        .home-icon {
            position: absolute; 
            top: -15px; 
            right: -20px; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            width: 120px;
            height: 110px; 
            background-color: transparent;
            border-radius: 0%; 
            text-decoration: none; 
            box-shadow: none; 
        }

        .home-icon img {
            width: 80%; 
            height: auto; 
            display: block; 
        }

        /* Home icon hover effect */
        .home-icon:hover {
            background-color: transparent; 
            transform: scale(1.1); 
            transition: transform 0.2s ease, background-color 0.2s ease; 
        }

        /* Comparison container for displaying car cards */
        .comparison-container {
            display: flex; 
            flex-wrap: wrap; 
            gap: 1rem; 
            justify-content: center;
            margin: 2rem; 
        }

        /* Styling for individual car cards */
        .car-card {
            background-color: #333;
            border: 2px solid #cc0000; 
            border-radius: 8px; 
            width: 300px; 
            padding: 1rem;
            text-align: center;
            position: relative; 
        }

        .car-card img {
            width: 100%; 
            height: auto; 
            border-radius: 5px;
        }

        .car-specs {
            margin-top: 1rem; 
            text-align: left;
        }

        .car-specs h4 {
            margin: 0.5rem 0; 
        }

        .car-specs p {
            margin: 0.2rem 0; 
        }

        /* Header for comparison prompt */
        .compare-header {
            font-size: 1.5rem; 
            color: #cc0000; 
            text-align: center; 
            margin-bottom: 2rem; 
            margin-top: 2rem; 
        }

        /* Styling for the compare button */
        .compare-btn {
            display: block;
            margin: 2rem auto; 
            padding: 1rem 2rem; 
            background-color: #cc0000; 
            color: #fff; 
            border: none; 
            border-radius: 8px; 
            cursor: pointer;
            font-size: 1.2rem;
        }

        /* Disabled state for the compare button */
        .compare-btn:disabled {
            background-color: #555; 
            cursor: not-allowed; 
        }

        /* Comparison table styling */
        .comparison-table {
            width: 100%; 
            margin: 2rem 0; 
            border-collapse: collapse;
            text-align: left; 
        }

        .comparison-table th, .comparison-table td {
            border: 1px solid #cc0000; 
            padding: 0.5rem; 
        }

        .comparison-table th {
            background-color: #cc0000; 
        }
    </style>
</head>
<body>
    <header>
        <h1>HyperCar Showcase: Compare Hypercars</h1> <!-- Main header for the page -->
        <img src="/images/logo.png" alt="HyperCar Showcase Logo" class="logo-image"> <!-- Logo for the page -->
        <a href="home" class="home-icon" title="Go to Homepage"> <!-- Link to the homepage -->
            <img src="/images/homeicon.png" alt="Home" /> <!-- Home icon image -->
        </a>
    </header>

    <!-- Header for comparison prompt -->
    <div class="compare-header">Select and Compare Hypercars Side by Side</div>

    <!-- Container for displaying the car cards -->
    <div class="comparison-container" id="carList">
        <!-- Loop through each car and create a card with checkbox for comparison -->
        <% cars.forEach(car => { %>
            <div class="car-card">
                <!-- Checkbox for selecting a car -->
                <input type="checkbox" class="car-checkbox" value="<%= car.car_id %>" data-car='<%= JSON.stringify(car) %>'>
                <img src="<%= car.imagePath %>" alt="<%= car.model %> Image"> <!-- Car image -->
                <h2><%= car.brand %> <%= car.model %></h2> <!-- Car brand and model -->
                <div class="car-specs">
                    <h4>Specifications:</h4>
                    <p><strong>Top Speed:</strong> <%= car.top_speed %> km/h</p> <!-- Car top speed -->
                    <p><strong>Horsepower:</strong> <%= car.horsepower %> HP</p> <!-- Car horsepower -->
                    <p><strong>Price:</strong> <%= car.price %></p> <!-- Car price -->
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Compare button -->
    <button class="compare-btn" id="compareBtn" disabled>Compare Selected Cars</button>

    <!-- Section for displaying the comparison result -->
    <div id="comparisonResult"></div>

    <script>
        /**
         * Initializes the car comparison functionality
         * 
         * Listens for changes in car selection, enables or disables the compare button, 
         * and handles displaying the comparison results.
         * 
         * @returns {void} None. Side effect: updates the page with comparison data.
         */
        const carCheckboxes = document.querySelectorAll('.car-checkbox');
        const compareBtn = document.getElementById('compareBtn');
        const comparisonResult = document.getElementById('comparisonResult');

        let selectedCars = []; // Stores selected cars for comparison

        // Event listener for checkbox changes
        carCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', (e) => {
                const carData = JSON.parse(e.target.dataset.car); // Parse car data from checkbox

                if (e.target.checked) {
                    selectedCars.push(carData); // Add car to selection if checked
                } else {
                    selectedCars = selectedCars.filter(car => car.car_id !== carData.car_id); // Remove car if unchecked
                }

                compareBtn.disabled = selectedCars.length < 2; // Enable/Disable compare button based on selection
            });
        });

        // Event listener for compare button click
        compareBtn.addEventListener('click', () => {
            if (selectedCars.length < 2) return; // Ensure at least two cars are selected

            let tableHTML = `
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Feature</th>
                            ${selectedCars.map(car => `<th>${car.brand} ${car.model}</th>`).join('')} <!-- Add column headers for each car -->
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Top Speed (km/h)</td>
                            ${selectedCars.map(car => `<td>${car.top_speed}</td>`).join('')} <!-- Top speed for each car -->
                        </tr>
                        <tr>
                            <td>Horsepower (HP)</td>
                            ${selectedCars.map(car => `<td>${car.horsepower}</td>`).join('')} <!-- Horsepower for each car -->
                        </tr>
                        <tr>
                            <td>Price</td>
                            ${selectedCars.map(car => `<td>${car.price}</td>`).join('')} <!-- Price for each car -->
                        </tr>
                    </tbody>
                </table>
            `;

            comparisonResult.innerHTML = tableHTML; // Display comparison result
        });
    </script>
</body>
</html>
