                                    <form action="/service_centers/<%= service.service_cent_id %>?_method=DELETE" method="POST">
                                        <button type="submit">Delete</button>
                                    </form>
                                    <button onclick="window.location.href='/service_centers/edit-form/<%= service.service_cent_id %>'">Edit</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="no-items">No service centers found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Section for favorites reviews -->
        <div class="section">
            <h2>Manage Favorites</h2>
            <!-- Table displays favorites data -->
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Favorites ID</th>
