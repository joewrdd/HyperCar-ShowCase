                                        <button type="submit">Delete</button>
                                    </form>
                                    <button onclick="window.location.href='/manufacturers/edit-form/<%= manufacturer.manufacturer_id %>'">Edit</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
